<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :role => 'form' , :class => 'form-horizontal'}) do |f| %>
  
	<%= devise_error_messages! %>

	<div class="form-group">
		<label class="control-label col-sm-2"><%= f.label :first_name %></label>
		<div class="col-sm-4 controls input-separator" >
			<%= f.text_field :first_name, :class => 'form-control' %>		 			
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-2"><%= f.label :last_name %></label>
		<div class="col-sm-4 controls input-separator" >
			<%= f.text_field :last_name, :class => 'form-control' %>		 			
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-2"><%= f.label :phone %></label>
		<div class="col-sm-4 controls input-separator" >
			<%= f.telephone_field :phone, :class => 'form-control' %>		 			
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-2"><%= f.label :email %></label>
		<div class="col-sm-4 controls input-separator" >
			<%= f.email_field :email,  :class => 'form-control' %>		 			
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-2"><%= f.label :password, "Password (" + @minimum_password_length.to_s + " characters minimum)"  %></label>
		<div class="col-sm-4 controls input-separator">
			<%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>		 			
		</div>
	</div>

	<div class="form-group">
		<label class="control-label col-sm-2"><%= f.label :password_confirmation %></label>
		<div class="col-sm-4 controls input-separator">
			<%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>		 			
		</div>
	</div>

	<div class="actions">
		<%= f.submit "Sign up", class: "btn btn-small btn-success" %>
	</div>
	
<% end %>
